generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum ReadingStatus {
  TO_READ
  IN_PROGRESS
  COMPLETED
}

enum ReferenceType {
  BOOK
  REVIEW
  SAVED_BOOK
}

enum ActivityType {
  REVIEWED
  UPDATED_PROGRESS
  UPDATED_STATUS
  DISCUSSION
}

model User {
  id              String     @id @default(auto()) @map("_id") @db.ObjectId
  firstName       String
  lastName        String
  email           String     @unique
  password        String
  profileImageUrl String?
  dateCreated     DateTime   @default(now())
  reviews         Review[]
  accounts        Account[]
  sessions        Session[]
  activities      Activity[]

  followingIds String[] @db.ObjectId
  followerIds  String[] @db.ObjectId
  following    User[]   @relation("UserFollows", fields: [followingIds], references: [id])
  followers    User[]   @relation("UserFollows", references: [id], fields: [followerIds])

  @@map("users")
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.String
  access_token      String? @db.String
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.String
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verificationtokens")
}

model Book {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  title        String
  author       String[]
  description  String?
  publish_date DateTime?
  genres       String[]
  coverUrl     String?
  bookKey      String? //if saved from open lib api

  @@map("books")
}

model SavedBook {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  userId      String        @db.ObjectId
  bookId      String?       @db.ObjectId
  bookKey     String //open library api key
  dateAdded   DateTime      @default(now())
  dateUpdated DateTime      @updatedAt
  status      ReadingStatus @default(TO_READ)
  progress    Int           @default(0)
  isPinned    Boolean?
  pageCount   Int?

  activities Activity[]

  @@unique([userId, bookKey])
  @@map("savedBooks")
}

model Review {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  user    User     @relation(fields: [userId], references: [id])
  userId  String   @db.ObjectId
  bookKey String //open library api key
  content String?
  subject String?
  rating  Int
  date    DateTime @default(now())

  activities Activity[]

  @@map("reviews")
}

model Activity {
  id           String       @id @default(auto()) @map("_id") @db.ObjectId
  userId       String       @db.ObjectId
  bookKey      String?
  bookTitle    String?
  activityType ActivityType
  date         DateTime     @default(now())

  discussion  String?
  savedBookId String? @db.ObjectId
  reviewId    String? @db.ObjectId

  user      User       @relation(fields: [userId], references: [id])
  savedBook SavedBook? @relation(fields: [savedBookId], references: [id])
  review    Review?    @relation(fields: [reviewId], references: [id])
}
